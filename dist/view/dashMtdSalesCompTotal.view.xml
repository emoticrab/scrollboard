<mvc:View 
	controllerName="scrollboard.controller.salesDashboard"
	xmlns="sap.suite.ui.microchart"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<html:style>
		.tile {
			background-color: #FEFFB0;
			}
	</html:style>
	<m:GenericTile
		binding="{CompChartModel>/grpSalesDashboards}"
		class="tile"
		header="Total" 
		subheader="month comparison ($)"
		frameType="TwoByOne" 
		press="press">
		<m:tileContent>
			<m:TileContent 
				footer="" 
				unit=""
				frameType="TwoByOne">
				<m:content>
					<DeltaMicroChart 
						value1="{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTD',RecType='Actual')/SalesValue}" 
						value2="{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTD-1',RecType='Actual')/SalesValue}"
						title1="{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTD',RecType='Actual')/DateText}" 
						title2="{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTD-1',RecType='Actual')/DateText}" 
						displayValue1="{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTD',RecType='Actual')/SalesValue}{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTD',RecType='Actual')/Scale}"
						displayValue2="{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTD-1',RecType='Actual')/SalesValue}{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTD-1',RecType='Actual')/Scale}" 
						deltaDisplayValue="{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTDDIFF',RecType='Actual')/SalesValue}%" 
						color="{CompChartModel>/grpSalesDashboards(Brand='Total',Currency='USD',DateIndicator='MTDDIFF',RecType='Actual')/Color}"
						width="100%"/>
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
</mvc:View>