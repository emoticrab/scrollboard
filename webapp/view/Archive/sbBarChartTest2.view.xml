<mvc:View 
	controllerName="scrollboard.controller.salesDashboard"
	xmlns="sap.suite.ui.microchart" 
	xmlns:m="sap.m" 
	xmlns:mvc="sap.ui.core.mvc">
	<m:GenericTile
		header="Group Sales"
		subheader='Core ($)'
		frameType="OneByOne"
		press="press">
		<m:tileContent>
			<m:TileContent footer="-18%">
				<m:content>
					<ComparisonMicroChart
						scale="M">
						<data>
							<ComparisonMicroChartData 
								title="MTD-1"
								value="50" 
								color="Neutral" />
							<ComparisonMicroChartData 
								title="MTD"
								value="30" 
								color="Critical" />
						</data>
					</ComparisonMicroChart>
				</m:content>
			</m:TileContent>
		</m:tileContent>
	</m:GenericTile>
</mvc:View>